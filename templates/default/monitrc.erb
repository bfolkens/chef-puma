check process <%= @name %>.puma with pidfile <%= @pidfile %>
  start program = "<%= "#{@puma_directory}/puma_start.sh" %>" with timeout <%= @monit_timeout.to_i %> seconds
	  as uid <%= @owner %>
    with timeout 10 seconds
  <% if @workers != 0 %>
  stop program = "<%= "#{@puma_directory}/puma_kill.sh" %>"
	  as uid <%= @owner %>
    with timeout 5 seconds
  <% else %>
  stop program = "cd <%= @working_dir %> && <%= @exec_prefix %> pumactl -S <%= @state_path %> stop"
	  as uid <%= @owner %>
    with timeout 20 seconds
  <% end %>
